{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true
      }
    ],
    "semi": ["error", "always"],
    "no-console": "off"
  }
}
